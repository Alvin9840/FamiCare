<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoodSymptomFragment">

    <LinearLayout
        android:id="@+id/Mood_Symptom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarStyle="insideInset"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="99dp">

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="日期選擇"
                        android:textSize="25dp"
                        android:textStyle="bold">

                    </TextView>

                    <RadioGroup
                        android:id="@+id/week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RadioButton
                            android:id="@+id/DDAY"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/TWOD"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/THREED"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/FOURD"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>


                        <RadioButton
                            android:id="@+id/FIVED"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/SIXD"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/SEVEND"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="日期"
                            android:textSize="22dp"></RadioButton>


                    </RadioGroup>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="症狀勾選"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/headache"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="頭痛"
                        android:textSize="22dp" />

                    <CheckBox
                        android:id="@+id/dizzy"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="頭暈"
                        android:textSize="22dp" />

                    <CheckBox
                        android:id="@+id/nausea"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="噁心"
                        android:textSize="22dp" />

                    <CheckBox
                        android:id="@+id/tried"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="疲勞"
                        android:textSize="22dp" />

                    <CheckBox
                        android:id="@+id/stomachache"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="胃痛"
                        android:textSize="22dp" />


                    <Button
                        android:id="@+id/updatesy"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="更新症狀"
                        android:textSize="20dp">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/back_to_mood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="返回壓力指數"
        android:textSize="20dp" />

</LinearLayout>