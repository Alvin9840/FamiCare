<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:text="身心狀況報告"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="7dp"
                android:layout_weight="20"
                android:text="症狀勾選"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <CheckBox
                    android:id="@+id/ha"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="頭痛"
                    android:textSize="22dp" />

                <CheckBox
                    android:id="@+id/dizzy"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="頭暈"
                    android:textSize="22dp" />

                <CheckBox
                    android:id="@+id/na"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="噁心"
                    android:textSize="22dp" />

                <CheckBox
                    android:id="@+id/sa"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="胃痛"
                    android:textSize="22dp" />

                <CheckBox
                    android:id="@+id/tired"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="疲勞"
                    android:textSize="22dp" />

            </LinearLayout>

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:background="#CC3300"
                android:gravity="center"
                android:text="更新壓力指數分析"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                android:textStyle="bold">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="7dp"
                android:layout_weight="20">

                <TextView
                    android:id="@+id/stress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="壓力指數:"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/stress"
                    android:gravity="center"
                    android:text="顯示數字"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="75" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_weight="40"
            android:text="緩減建議"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/selector_color"
        app:itemTextColor="@color/selector_color"
        app:menu="@menu/bottom_navigation" />
</RelativeLayout>